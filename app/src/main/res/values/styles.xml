<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
    </style>
    
    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.EditText" parent="Base.Widget.AppCompat.EditText">

    </style>

    <!-- LoginActivity Theme -->
    <style name="LoginActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:editTextStyle">@style/LoginActivityTheme.EditText</item>
    </style>

    <style name="LoginActivityTheme.EditText" parent="AppTheme.EditText">

    </style>

    <style name="LoginActivityTheme.BorderlessButton" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
