<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:buttonStyle">@style/AppTheme.Button</item>
        <item name="android:editTextStyle">@style/AppTheme.EditText</item>
    </style>

    <style name="AppTheme" parent="AppThemeBase"/>
    
    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">#627cc167</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme.EditText" parent="Base.Widget.AppCompat.EditText">

    </style>

    <!-- LoginActivity Theme -->
    <style name="LoginActivityThemeBase" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="buttonStyle">@style/LoginActivityTheme.Button</item>
        <item name="android:buttonStyle">@style/LoginActivityTheme.Button</item>
        <item name="editTextStyle">@style/LoginActivityTheme.EditText</item>
        <item name="android:editTextStyle">@style/LoginActivityTheme.EditText</item>
    </style>

    <style name="LoginActivityTheme" parent="LoginActivityThemeBase"/>

    <style name="LoginActivityTheme.Button" parent="Base.Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/login_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:buttonStyle">?android:attr/borderlessButtonStyle</item>
    </style>

    <style name="LoginActivityTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <!--<item name="android:background">@drawable/edit_text_background_green</item>-->
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LoginActivityTheme.BorderlessButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/loginButtonColor</item>
        <item name="android:minHeight">1dp</item>
    </style>

</resources>
